<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/map_cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/item_map_store_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="false"
                app:cardElevation="0dp"
                app:contentPadding="0dp"
                android:layout_gravity="center"
                app:cardCornerRadius="20dp"
                android:adjustViewBounds="true"
                >

                <ImageView
                    android:id="@+id/map_store_image"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:padding="0dp"
                    android:adjustViewBounds="true"
                    app:cardCornerRadius="20dp"
                    android:background="@drawable/round"
                    android:contentDescription="TODO" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/map_store_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="칠성조선소"
                            android:textSize="50px">

                        </TextView>

                        <TextView
                            android:id="@+id/map_store_distance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1.4km">

                        </TextView>

                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:layout_marginEnd="20dp">

                        <ImageView
                            android:id="@+id/map_star_ic"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="right"
                            android:src="@drawable/ic_star" />

                        <TextView
                            android:id="@+id/map_star_score"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:text="4.8">

                        </TextView>

                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:id="@+id/map_store_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="백현동 카페거리의 고급스러운 무언가"
                    android:maxLines="3"
                    android:ellipsize="end">

                </TextView>

                <TextView
                    android:id="@+id/map_store_hashTag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="#숨은맛집 #저녁식사">

                </TextView>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>